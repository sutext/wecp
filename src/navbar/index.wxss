.navbar{
    position: fixed;
    z-index: 99999;
    width: 100%;
    height: 44px;
    font-size: 16px;
    left: 0;
    top: 0;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: white;
}
.left-arrow{
    content: "";
    display: inline-block;
    width: 10px;
    height: 10px;
    transform: rotate(45deg);
}
.side-box{
    width: 45px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.title{
    font-size: 16px;
    font-weight: bold;
    max-width: 400rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.hover{
    filter: brightness(80%);
}
