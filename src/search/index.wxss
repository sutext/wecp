.wrapper{
    height: 44px;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    padding: 0 10px;
    align-items: center;
}
.box{
    flex: 1 1 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: white;
    border-radius: 16px;
    box-sizing: border-box;
    padding: 0 10px;
    height: 32px;
}
.side{
    display: flex;
    align-items: center;
}
.box-center{
    justify-content: center;
}
.input{
    margin-left: 4px;
    font-size: 13px;
}
.cancel{
    color: white;
    font-size: 16px;
    margin-left: 10px;
    line-height: 32px;
}