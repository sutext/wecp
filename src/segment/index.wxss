.warp{
  display: flex;
  height: 100%;
  width: 100%;
  background-color: white;
  position: relative;
  
}
.item{
  flex: 1 1 0;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: pre;
}
.tracker{
  position: absolute;
  bottom: 0;
  height: 2px;
  transition:left 0.2s ease-in-out;
}


